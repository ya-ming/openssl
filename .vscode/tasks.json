{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "-ggdb",
        "-I/home/osboxes/cpp/lib/openssl/include/",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out",
        "-L/home/osboxes/cpp/lib/openssl/",
        "-lcrypto",
        "-lssl"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
  ]
}